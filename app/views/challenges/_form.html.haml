-#= nested_form_for  @question do |f|
= nested_form_for  setup_question(@question) do |f|
  .control-group
    = f.label :qtype, 'Type'
    = f.select :qtype, options_for_select(question_types, @question.qtype)
  .control-group
    = f.label :description, 'Question'
    = f.text_area :description
  .control-group.answers
    -# - if f.object.type?('text')
    Answer(s)
    = f.fields_for :answers
    - if f.object.type?('multi-select')
      = f.link_to_add 'add an answer', :answers
  .control-group.choices
    - if !@question.type?('text')
      Choices
      = f.fields_for :choices do |builder|
        %li
          = render 'choice_fields', :f => builder
      = f.link_to_add 'add a choice', :choices
  .control-group
    = f.submit nil
