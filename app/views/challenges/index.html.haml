- pages = number_of_pages(@questions)
= render 'shared/pagination', :pages => pages
#title
  %h1 Challenge Questions
.row-fluid.pages
  = form_tag('/challenges/submit')
  .container-fluid.pages
    - 1.upto pages do |page|
      .page.row-fluid
        .span10.offset1
          - page_items(@questions, page).each do |item|
            .page-item.border2
              - if user_signed_in? && current_user.is_admin?
                .action.pull-right
                  .btn
                    = link_to '', edit_challenge_path(item), :class => 'icon-edit', :title => 'Edit'
              .description.span11
                = item.description
              .answer.clear
                - if item.type? 'text'
                  = text_field_tag 'questions[#{item.id}][answer]'
                - elsif item.type? 'single-select'
                  - item.options.each do |choice|
                    .choice
                      = choice.content 
                - else
                  = 'multi selection'
    = submit_tag 'Submit', :class => 'btn pull-right'
= render 'shared/pagination', :pages => pages
    