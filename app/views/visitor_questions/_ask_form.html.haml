= form_for(@question, :url => ask_path, html: { class: 'form-horizontal span10' }) do |f|
  .control-group
    = f.label :email, class: 'control-label'
    .controls
      = f.email_field :email, class: 'span12'
  .control-group
    = f.label :description, class: 'control-label'
    .controls
      = f.text_area :description, :rows => '4', class: 'span12 noresize'
  .control-group
    .controls
      = f.button 'Ask', class: 'btn'