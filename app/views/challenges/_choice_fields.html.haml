- if @question.type?('text')
  = f.text_field :content, :class => 'span12'
  = f.hidden_field :selected
- else
  = f.text_field :content, :class => 'span-static'
  = f.link_to_remove 'remove', :class => 'btn'
  - if @question.type?('single-select')
    = f.radio_button :selected, 'true', :title => 'Mark as answer', :class => 'span'
  - else
    = f.check_box :selected, :title => 'Mark as answer', :class => 'span'
  